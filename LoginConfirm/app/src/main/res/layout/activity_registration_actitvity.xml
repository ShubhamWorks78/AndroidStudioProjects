<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/eve"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.seals.shubham.loginconfirm.RegistrationActitvity">
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="#ff151515"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Registration"

                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="19dp"
                android:id="@+id/RegMess"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Username"
                android:background="@drawable/shape"
                android:ems="10"
                android:padding="8dp"
                android:id="@+id/editUser"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/RegMess"
                android:layout_alignLeft="@+id/editPass"
                android:layout_alignStart="@+id/editPass"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Phone Number"
                android:ems="10"
                android:padding="8dp"
                android:background="@drawable/shape"
                android:id="@+id/editPhone"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/editPass"
                android:layout_alignLeft="@+id/editPass"
                android:layout_alignStart="@+id/editPass"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Password"
                android:ems="10"
                android:padding="8dp"
                android:background="@drawable/shape"
                android:id="@+id/editPass"
                android:layout_below="@+id/editUser"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <Button
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/btnSign"
                android:textColor="#ffffffff"
                android:layout_marginTop="20dp"
                android:background="@drawable/shapred"
                android:layout_below="@+id/editPhone"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        </LinearLayout>
</RelativeLayout>