<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView" android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/button2" android:layout_alignParentRight="true"
        android:layout_toLeftOf="@id/button2"
        android:layout_alignParentEnd="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button2" android:layout_gravity="right"
        android:layout_alignTop="@+id/button" android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Button"
        android:id="@+id/button"
        android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
</RelativeLayout>