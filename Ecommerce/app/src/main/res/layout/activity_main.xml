<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blurr"
    tools:context="com.seals.shubham.ecommerce.MainActivity">
    <LinearLayout android:layout_width="280dp" android:layout_height="340dp"
                  android:layout_centerVertical="true"
                  android:orientation="vertical"
                  android:layout_centerHorizontal="true"
                  android:background="@drawable/layoutdrawable"
    >
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <TextView
                android:id="@+id/TxtFrgtPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textSize="17dp"
                android:layout_marginTop="40dp"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_marginRight="20dp"
                android:layout_gravity="right"
            />
            <EditText
                android:id="@+id/LogUser"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:textColor="#3cee3322"
                android:hint="Username"
                android:singleLine="true"
                android:padding="8dp"
                android:textColorHint="#cd34cd33"
                android:background="@drawable/edittext"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
            />
            <EditText
                android:id="@+id/LogPass"
                android:layout_width="250dp"
                android:layout_height="35dp"
                android:textColor="#3cee3322"
                android:hint="Password"
                android:padding="8dp"
                android:singleLine="true"
                android:inputType="textPassword"
                android:textColorHint="#cd34cd33"
                android:background="@drawable/edittext"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"

            />
            <CheckBox
                android:id="@+id/ShwPass"
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:layout_marginLeft="14dp"
                android:text="Show Password"
                android:textColor="#9dff3564"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_gravity="center"
            />
            <Button
                android:id="@+id/BtnLog"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/buttondrawable"
                android:layout_gravity="center"
                android:textColor="#ffffffff"
                android:text="Log In"
                android:textAllCaps="false"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:textSize="18dp"
                android:layout_marginBottom="15dp"
            />
            <TextView
                android:id="@+id/TxtRegisterPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Create an Account!!"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textSize="15dp"
            />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
