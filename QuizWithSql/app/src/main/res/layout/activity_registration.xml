<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/eve"
    tools:context="com.seals.shubham.quizwithsql.RegistrationActivity">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="430dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="#a7151515"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Registration"

                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="19dp"
                android:id="@+id/RegMess"
                android:layout_alignParentTop="true" android:layout_centerHorizontal="true"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Username"
                android:background="@drawable/shape"
                android:ems="10"
                android:padding="8dp"
                android:id="@+id/editUser"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/RegMess"
                android:layout_alignLeft="@+id/editPass"
                android:layout_alignStart="@+id/editPass"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Phone Number"
                android:ems="10"
                android:padding="8dp"
                android:background="@drawable/shape"
                android:id="@+id/editPhone"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/editPass"
                android:layout_alignLeft="@+id/editPass"
                android:layout_alignStart="@+id/editPass"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Password"
                android:ems="10"
                android:padding="8dp"
                android:background="@drawable/shape"
                android:id="@+id/editPass"
                android:layout_below="@+id/editUser"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"/>

            <Button
                android:layout_width="230dp"
                android:layout_height="wrap_content"
                android:text="Register"
                android:layout_marginTop="15dp"
                android:id="@+id/btnSign"
                android:textColor="#ffffffff"
                android:background="@drawable/shapred"
                android:layout_below="@+id/radGrp" android:layout_centerHorizontal="true"/>

            <AutoCompleteTextView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape"
                android:id="@+id/editType"
                android:hint="UserType"
                android:ems="10"
                android:padding="8dp"
                android:layout_below="@+id/editPhone"
                android:layout_alignLeft="@+id/editPhone"
                android:layout_alignStart="@+id/editPhone"
                android:layout_marginTop="20dp"/>
            <RadioGroup
                android:layout_width="250dp"
                android:layout_marginTop="20dp"
                android:layout_height="50dp"
                android:id="@+id/radGrp"
                android:layout_below="@+id/editType"
                android:layout_alignLeft="@+id/editType"
                android:layout_alignStart="@+id/editType">
                <RadioButton
                    android:layout_width="230dp"
                    android:layout_height="25dp"
                    android:text="Male"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="italic"
                    android:id="@+id/radM"
                    android:textColor="#ffffffff"
                />
                <RadioButton
                    android:id="@+id/radF"
                    android:layout_width="230dp"
                    android:layout_height="25dp"
                    android:text="Female"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="italic"
                    android:textColor="#ffffffff"
                />
            </RadioGroup>
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>