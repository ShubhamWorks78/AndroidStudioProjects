<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/eve"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.seals.shubham.quizprojectwithserver.Registration">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="#ff151515"
        android:layout_alignParentStart="true" android:id="@+id/linearLayout3">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Registration"

                android:textColor="#ffffffff"
                android:textStyle="bold"
                android:textSize="19dp"
                android:id="@+id/RegMess"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Username"
                android:background="@drawable/shape"
                android:ems="10"
                android:padding="8dp"
                android:id="@+id/editUser"
                android:layout_marginBottom="15dp"
                android:layout_below="@+id/RegMess" android:layout_alignLeft="@+id/editPass"
                android:layout_alignStart="@+id/editPass"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Phone Number"
                android:ems="10"
                android:padding="8dp"
                android:background="@drawable/shape"
                android:id="@+id/editPhone"
                android:layout_above="@+id/radGrp" android:layout_alignLeft="@+id/editName"
                android:layout_alignStart="@+id/editName" android:layout_marginBottom="15dp"/>

            <EditText
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:inputType="textPersonName"
                android:hint="Password"
                android:ems="10"
                android:padding="8dp"
                android:background="@drawable/shape"
                android:id="@+id/editPass"
                android:layout_below="@+id/editUser"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="15dp"
            />


            <AutoCompleteTextView
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:background="@drawable/shape"
                android:id="@+id/editType"
                android:hint="UserType"
                android:ems="10"
                android:padding="8dp"
                android:layout_below="@+id/editName" android:layout_alignLeft="@+id/editPhone"
                android:layout_alignStart="@+id/editPhone"
                android:layout_marginTop="15dp"
            />
            <RadioGroup
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:id="@+id/radGrp"
                android:layout_alignParentBottom="true" android:layout_alignLeft="@+id/editType"
                android:layout_alignStart="@+id/editType" android:layout_marginBottom="30dp">
                <RadioButton
                    android:layout_width="230dp"
                    android:layout_height="25dp"
                    android:text="Male"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="italic"
                    android:id="@+id/radM"
                    android:textColor="#ffffffff"
                />
                <RadioButton
                    android:id="@+id/radF"
                    android:layout_width="230dp"
                    android:layout_height="25dp"
                    android:text="Female"
                    android:textAppearance="?android:textAppearanceLarge"
                    android:textStyle="italic"
                    android:textColor="#ffffffff"
                />
            </RadioGroup>
            <EditText android:layout_width="250dp"
                      android:layout_height="40dp"
                      android:inputType="textPersonName"
                      android:hint="Name"
                      android:background="@drawable/shape"
                      android:ems="10"
                      android:paddingLeft="8dp"

                      android:layout_below="@+id/editPass" android:layout_alignLeft="@+id/editPass"
                      android:layout_alignStart="@+id/editPass" android:id="@+id/editName"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnSign"
        android:textColor="#ffffffff"
        android:background="@drawable/shapred"
        android:layout_below="@+id/linearLayout3" android:layout_centerHorizontal="true"/>


</RelativeLayout>
